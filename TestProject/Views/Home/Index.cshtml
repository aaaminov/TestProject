@{
    ViewData["Title"] = "Модели, сгруппированные по брендам";
}

<div class="">
    <div class="container">
    @{
        foreach (var brand in ViewBag.brands) {
            string is_brand_active;
            if (brand.active) {
                is_brand_active = "enabled";
            } else {
                is_brand_active = "disabled";
            }
				<div class="p-2">
                <h2 class="">
                    <a class="@is_brand_active" asp-controller="Home" asp-action="Brand" asp-route-id="@brand.id">@brand.name</a>
                </h2>
                <ul class="">
                @{
                    foreach (var model_ in ViewBag.models) {
                        if (model_.brand_id == brand.id) {
                            string is_model_active;
                            if (model_.active) {
                                is_model_active = "enabled";
                            } else {
                                is_model_active = "disabled";
                            }
                            <li class="p-1">
                                <a class="@is_model_active" asp-controller="Home" asp-action="Model" asp-route-id="@model_.id">@model_.name</a>
                            </li>
                        }
                    }
                } 
                </ul>
            </div>
        }
    }
    </div>
</div>
